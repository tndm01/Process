        function startTime() {
            var today = new Date();
            var h = today.getHours();
            var m = today.getMinutes();
            var s = today.getSeconds();
            var d = today.getDate();
            var M = today.getMonth() + 1;
            var y = today.getFullYear();
            m = checkTime(m);
            s = checkTime(s);
            //d = checkTime(d);
            M = checkTime(M);
            $(".clock").html( h + ":" + m + ":" + s + "  " + d + "/" + M + "/" + y);
            var t = setTimeout(startTime, 500);
        }
        function getid(s)
