        function checkTime(i) {
            if (i < 10) { i = "0" + i };  // add zero in front of numbers < 10
            return i;
        }
        function runWarning() {
            var options = {};
            // Run the effect
            $(".bounce").effect("bounce", options, 1000, runWarning);
        };
