                                    if (ListMay.Count > 0)
                                    {
                                        tong = ListMay.GroupBy(u => u.MaMT).Select(grp => new
                                        {
                                            MaMT = grp.Key,


                                        }).Count();

                                        khongbinhthuong = ListMay.Where(u => u.MucDo == 2 || u.MucDo == null).GroupBy(u => u.MaMT).Select(grp => new
                                        {
                                            MaMT = grp.Key,
                                            total = grp.Select(l => l.MaTB).Distinct().Count()

