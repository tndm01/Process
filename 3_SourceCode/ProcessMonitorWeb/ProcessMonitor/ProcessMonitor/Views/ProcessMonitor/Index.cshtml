                        @{
                            int j = 0;
                            foreach (var i in Model)
                            {
                                List<ProcessMonitor.Models.GetThongTinTrangThaiThietBi_Result> ListMay = ViewData[@i.MSCum] as List<ProcessMonitor.Models.GetThongTinTrangThaiThietBi_Result>;
                                var tong = 0;
                                var khongbinhthuong = 0;



                                if (j == 0)
