                                                <tr style="background:#b7b7b7;">
                                                    <td class="black">@tong</td>
                                                    @{
                                    int tam = tong - khongbinhthuong;
                                                    }
                                                    <td class="blue">@tam</td>


                                                    <td class="red">@khongbinhthuong</td>
                                                </tr>



                                            </table>
                                        </a>
                                    </li>
                                }
                                j++;
                            }
                        }
